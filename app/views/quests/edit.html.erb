<div class="card mt-4">
  <div class="card-header">
    <h1 class="mb-0">クエスト編集</h1>
  </div>

  <div class="card-body">
    <%= form_with(model: @quest, local: true) do |form| %>
      <% if @quest.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <h2><%= pluralize(@quest.errors.count, "error") %> prohibited this quest from being saved:</h2>
          <ul>
          <% @quest.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Form fields -->
      <!-- ... -->

      <div class="actions">
        <%= form.submit "更新する", class: "btn btn-primary" %>
        <%= link_to "キャンセル", @quest, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
