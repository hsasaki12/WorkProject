<h1>クエスト編集</h1>

<%= form_with(model: @quest, local: true) do |form| %>
  <% if @quest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quest.errors.count, "error") %> prohibited this quest from being saved:</h2>

      <ul>
      <% @quest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :category %>
    <%= form.select :category, Quest.categories.keys, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :difficulty %>
    <%= form.select :difficulty, Quest.difficulties.keys, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :reward %>
    <%= form.number_field :reward, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :public_scope %>
    <%= form.select :public_scope, Quest.public_scopes.keys, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :application_end_time %>
    <%= form.datetime_select :application_end_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :attachment %>
    <%= form.file_field :attachment, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "更新する", class: "btn btn-primary" %>
    <%= link_to "キャンセル", @quest, class: "btn btn-secondary" %>
  </div>
<% end %>
