<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h3><%= @quest.title %></h3>
        </div>
        <div class="card-body">
          <p>報酬: <%= @quest.reward %></p>
          <p>説明: <%= @quest.description %></p>
          <% if @quest.file.attached? %>
            <%= link_to "ファイルをダウンロードする", url_for(@quest.file), class: "btn btn-primary" %>
          <% end %>
        </div>
        <% if current_user == @quest.user %>
          <div class="card-footer">
            <%= link_to "クエストボード", quests_path, class: "btn btn-info" %>
            <%= link_to "クエストを編集する", edit_quest_path(@quest), class: "btn btn-warning" %>
            <%= form_with url: quest_path(@quest), method: :delete do %>
              <%= submit_tag "クエストを削除する", data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
